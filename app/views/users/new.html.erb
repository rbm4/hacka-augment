<div class="page-header"><h1>Registro</h1></div>
  <div class="row">
    <div class="col-md-6">
      <%= form_for @user do |f| %>
      <%= render 'shared/errors', object: @user %>
    
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :tipo, "Tipo" %>
        <%= select_tag :tipo, "<option>Parceiro</option><option>Colaborador</option>".html_safe, include_blank: true, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Senha" %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmação de senha" %>
        <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
      </div>
    
      <%= f.submit 'Register', class: 'btn btn-primary btn-lg' %>
    <% end %>
    </div>
    <div class="col-md-6"></div>
  </div>