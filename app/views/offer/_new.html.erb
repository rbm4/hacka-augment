<%= form_for @offer do |f| %>
                            <div class="form-group">
                                <%= f.label :name, "Nome da oferta" %>
                                <%= f.text_field :name, class: 'form-control', required: true %>
                            </div>
                            <div class="form-group">
                                <%= f.label :description, "Descrição" %>
                                <%= f.text_area :description, class: 'form-control', required: true %>
                            </div>
                            <div class="form-group">
                                <%= f.label :value, "Valor" %>
                                <%= f.number_field :value, class: 'form-control', required: true %>
                            </div>
                            <div class="form-group">
                                <%= f.label :video_url, "Vídeo" %>
                                <%= f.text_field :video_url, class: 'form-control', required: true %>
                            </div>
                            <div class="form-group">
                                <%= f.label :short_description, "Descrição curta" %>
                                <%= f.text_field :short_description, class: 'form-control', required: true %>
                            </div>
                            <div class="form-group">
                                <%= f.submit "Submeter", class: 'form-control', required: true %>
                            </div>
                            
                            <% end %>